
<% if current_user.avatar.attached? %>
<%= link_to image_tag(current_user.avatar, size: 120, style: 'box-shadow: 5px 5px 7px #FFF; border: 4px solid #00F; border-radius: 75%'), current_user %>
<% else %>
<%= link_to image_tag('crypto.jpg', size: 120, style: 'box-shadow: 5px 5px 7px #FFF; border: 4px solid #00F; border-radius: 75%'), current_user %>
<% end %>
<h1 style="color: #0F0; font-size: 20px;"><%= current_user.username %></h1>
<span><%= link_to "view my profile", current_user, style: 'color: #FFF; font-size: 14px' %></span>
<span style="color: #FFF; font-size: 13px"><%= pluralize(current_user.microposts.count, "Deck Feeds") %></span>
