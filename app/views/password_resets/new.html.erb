<% provide(:title, "Forgot password") %>
<div class="center jumbotron cnt_box">
  <h2 style="color: #0F0; font-size: 30px;">Forgot Your Password?</h2>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(url: password_resets_path, scope: :password_reset) do |f| %>
        <%= f.label 'Your Email:', style: 'color: #FFF; font-size: 30px;' %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.submit "Submit", class: "btn btn-success" %>
      <% end %>
    </div>

</div>
