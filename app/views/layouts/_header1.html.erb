<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu"
          class="nav navbar-nav navbar-right collapse navbar-collapse">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Guide", howto_path %></li>
          <li><%= link_to "About", about_path %></li>
          <li><%= link_to "Contact", contact_path %></li>
          <li><%= link_to "Donate", donate_path %></li>
          <% if logged_in? %>
            <li><%= link_to "Users", users_path %></li>
            <li class="dropdown" id="mnu_btn">
              <a href="#" id="account" class="dropdown-toggle" style="color: #0F0;">
                Account <b class="caret"></b>
              </a>
              <ul id="dropdown-menu" class="dropdown-menu">
                <li><%= link_to "View My Deck", current_user %></li>
                <li><%= link_to "Deck Editor", edit_user_path(current_user) %></li>
                <% if current_user.admin? %>
                  <li class="divider"></li>
                  <li><%= link_to "Admin Portal", admin_path %></li>
                <% end %>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, data: { "turbo-method": :delete } %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Log in", login_path, id: 'mnu_btn' %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
