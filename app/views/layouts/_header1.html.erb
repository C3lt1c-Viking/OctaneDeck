<header class="navbar sticky-top bg-dark" style="position: fixed; width: 100%; margin-bottom: 35px;">
  <div class="container">
    <%= link_to "OctaneDeck", root_path, id: "logo" %>
    <nav style="color: #FFF">
      <div class="navbar-header" style="color: #FFF">
        <button id="hamburger" type="button" class="navbar-toggle collapsed" style="color: #FFF">
          <span class="sr-only" style="color: #FFF">Toggle navigation</span>
          <span class="icon-bar" style="color: #FFF"></span>
          <span class="icon-bar" style="color: #FFF"></span>
          <span class="icon-bar" style="color: #FFF"></span>
        </button>
      </div>
      <ul id="navbar-menu" class="nav navbar-nav navbar-right collapse navbar-collapse">
        <li><%= link_to "Home", root_path, id: 'mnu_btn' %></li>
        <li><%= link_to "Guide", howto_path, id: 'mnu_btn' %></li>
        <li><%= link_to "About", about_path, id: 'mnu_btn' %></li>
        <li><%= link_to "Contact", contact_path, id: 'mnu_btn' %></li>
        <li><%= link_to "Donate", donate_path, id: 'mnu_btn' %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path, id: 'mnu_btn' %></li>
          <li class="dropdown" id="mnu_btn">
            <a href="#" id="account" class="dropdown-toggle" style="color: #0F0;">
              Account <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to "View Your Deck", current_user %></li>
              <li><%= link_to "Edit Profile Deck", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Coinbase Page", coinbase_path %></li>
              <li><%= link_to "NFT Marketplace", nft_path %></li>
              <% if current_user.admin? %>
                <li class="divider"></li>
                <li><%= link_to "Admin Portal", admin_path %></li>
              <% end %>
              <li>
                <%= link_to "Log out", logout_path, data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path, id: 'mnu_btn' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
