<div class="container text-center" style="margin-top: 30px;">
  <div class="row">
    <div class="col-sm-3 well">
      <div class="well">
        <p><%= @user.username %></p>
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: 'img-circle', height: '65', width: '65', alt: 'User Profile Image' %>
        <% else %>
          <%= image_tag('crypto.jpg', class: 'img-circle', height: '65', width: '65', alt: 'Profile Image') %>
        <% end %><br/>
        <hr>
        <div style="margin: 0 auto; text-align: center; justify-content: center">
          <%= render 'shared/stats' %>
        </div><br/>
        <% if current_user == @user %>
        <section class="micropost_form">
          <%= render 'shared/micropost_form' %>
        </section>
        <% else %>
          <%= render 'follow_form' if logged_in? %>
        <% end %>
      </div>
      <div class="well">
        <strong style="font-size: 30px;">About Me:</strong>
        <p class="usr_job">
          <b>Full Name:</b>
          <% if @user.first_name? || @user.last_name? %>
            <%= @user.first_name %>&nbsp;<%= @user.last_name %>
          <% else %>
            No Full Name
          <% end %><br/>
          <br/>
          <b>Education Level:</b>
          <%= @user.highest_education %><br/>
          <br/>
          <b>Job Title:</b>
            <% if @user.job_title? %>
              <%= @user.job_title %>
            <% else %>
              No Job
            <% end %><br/>
            <br/>
            <b>Company:</b>
            <% if @user.job_company? %>
              <%= @user.job_company %>
            <% else %>
              No Company
            <% end %><br/>
            <br/>
            <b>Humanoid Type:</b>
            <%= @user.sex %><br/>
            <br/>
            <b>Marital Status:</b>
            <%= @user.marital_status %><br/>
            <br/>
            <b>Interested In:</b>
            <%= @user.interested_in %><br/>
            <br/>
            <b>Bio:</b>
            <% if @user.hobbies %>
              <%= @user.hobbies %>
            <% else %>
              No Bio
            <% end %>
          </p>
      </div>
      <p>
        <strong style="font-size: 30px;">Social Profiles:</strong><br/>
        Connect with this Deck Users Other Profiles!<br/>
        <br/>
        <% if @user.facebook? %>
          <%= link_to 'Facebook', @user.facebook, target: '_blank', id: 'usr_links' %>
        <% else %>
          No Facebook Page
        <% end %>
      </p>
      <p>
        <% if @user.twitter? %>
          <%= link_to 'Twitter', @user.twitter, target: '_blank', id: 'usr_links' %>
        <% else %>
          No Twitter Page
        <% end %>
      </p>
      <p>
        <% if @user.github? %>
          <%= link_to 'GitHub', @user.github, target: '_blank', id: 'usr_links' %>
        <% else %>
          No GitHub Page
        <% end %>
      </p>
      <p>
        <% if @user.stackoverflow? %>
          <%= link_to 'Stack Overflow', @user.stackoverflow, target: '_blank', id: 'usr_links' %>
        <% else %>
          No StackOverflow Page
        <% end %>
      </p>
      <p>
        <% if @user.other_site? %>
          <%= link_to @user.other_site, @user.other_site, target: '_blank', id: 'usr_links' %>
        <% else %>
          No Personal Site
        <% end %>
      </p>
      <p>
        <% if @user.email? %>
          <%= link_to @user.email, "mailto:" + @user.email, target: '_blank', id: 'usr_links' %>
        <% else %>
          No Email
        <% end %>
      </p><br/>
      <hr>
      <p>
        <strong style="font-size: 30px;">Cryptocoin Address:</strong><br/>
        Send cryptocoins to this Deck User!<br/>
        <br/>
        Bitcoin Address:<br/>
        <% if @user.crypto_wallet_1? %>
          <%= @user.crypto_wallet_1 %>
        <% else %>
          No Bitcoin Address
        <% end %><br/>
        <br/>
        Dogecoin Address:<br/>
        <% if @user.crypto_wallet_2? %>
          <%= @user.crypto_wallet_2 %>
        <% else %>
          No Dogecoin Address
        <% end %><br/>
        <br/>
        Ethereum Address:<br/>
        <% if @user.crypto_wallet_3? %>
          <%= @user.crypto_wallet_3 %>
        <% else %>
          No Ethereum Address
        <% end %>
    </div>
    <div class="col-sm-7" style="background-color: #FFF;">

      <div class="row">
        <div class="col-sm-12">
          <% if @user.banner.attached? %>
            <%= image_tag @user.banner, style: 'width: 98%; height: 300px;', alt: 'User Profile Banner' %>
          <% else %>
            <%= image_tag('octanedeck_image.jpg', style: 'width: 98%; height: 300px;', alt: 'Profile Banner Image') %>
          <% end %>
        </div>
      </div><br/>
      <hr>
      <div class="row">
        <% if @user.microposts.any? %>
          <h3 style="color: black">Deck Feed (<%= @user.microposts.count %>)</h3>
          <ol class="microposts" style="text-align: left; color: #000; background-color: white;">
            <p style="color: #000">
            <%= render 'shared/feed' %>
            </p>
          </ol>
          <%= will_paginate @microposts %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-2 well">
      <div class="thumbnail">
        <p>Upcoming OctaneDeck Events:</p>
        <%= image_tag('coinbase.png', alt: "Coinbase API Integration", style: 'width: 100%; height: 300') %>
        <p><strong>Coinbase API Integration</strong></p>
        <p>We will be working on integrating Coinbase API keys in order to gather information about your
        cryptocoin address to be able to send/recieve payments to each other!</p>
      </div>
      <div class="well">
        <p>Coinbase Referral Program;</p>
        <%= image_tag('Coinbase-Referral-Code.png', alt: 'Coinbase Referral Ad', style: 'width: 100%; height: 300') %>
        Get <strong>$10 in BITCOIN</strong> when you <i>Buy/Sell</i> $100+ on Coinbase!<br/>
        <%= link_to "Join Coinbase Now!", "https://coinbase.com/join/vftne1", target: "_blank", class: "btn btn-lg btn-primary" %>
      </div>
      <div class="well">
        <p>Developers:</p>
        <%= image_tag('coding.jpg', alt: 'Developers of OctaneDeck', style: 'width: 100%; height: 300') %>
        The current Developer is <%= link_to 'C3lt1c Viking', 'https://octanedeck.herokuapp.com/users/1' %>. However,
        we are looking at other potential programmers as we progress along! Send resumes &amp; examples to;<br/>
        <%= link_to 'info@octanedeck.com', 'mailto:info@octanedeck.com' %>
      </div>
    </div>
  </div>
</div>
